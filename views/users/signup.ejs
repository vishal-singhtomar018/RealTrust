<% layout('/layouts/boilerplate') %>
   <div class="div1">
      <section class="vh-100">
         <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
               <div class="col col-xl-10">
                  <div class="card" style="border-radius: 1rem;">
                     <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                           <img src="/images/login.jpg" alt="login form" class="img-fluid"
                              style="position: relative; height: 100%;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                           <div class="card-body  p-4 p-lg-5 text-black">
                              <form action="/signup" method="POST" novalidate class="needs-validation">
                                 <div class="d-flex justify-content-between align-items-center mb-3 pb-1">
                                    <span class="h1 fw-bold mb-0">Sign Up</span>
                                    <img src="/images/logo.png" alt="HD Logo" style="height: 30px;" />
                                 </div>

                                 <p class="fw-normal mb-3 pb-3" style="font-weight:lighter;">Sign up to enjoy the
                                    feature
                                    of HD</p>

                                 <!-- Username -->
                                 <div class="form-outline mb-4 col-12 col-md-8">
                                    <label for="username" class="form-label"><b>Username</b></label>
                                    <input type="text" placeholder="Enter Username" class="form-control" id="name"
                                       name="name" required>
                                 </div>

                                 <!-- Date of Birth -->
                                 <div class="form-outline mb-4 col-12 col-md-8">
                                    <label for="dob" class="form-label"><b>Date of Birth</b></label>
                                    <div class="input-group">
                                       <span class="input-group-text"><i class="bi bi-calendar-date"></i></span>
                                       <input type="date" class="form-control" id="dob" name="dob" required>
                                    </div>
                                 </div>

                                 <!-- Email + Send OTP -->
                                 <div class="form-outline mb-4 col-12 col-md-8">
                                    <label for="email" class="form-label" autofocus><b>Email</b></label><br>
                                    <div class="input-group">
                                       <input type="email" placeholder="Enter Email" class="form-control" name="email"
                                          id="email" autocomplete="off" required>
                                       <button type="button" class="btn btn-outline-secondary" id="send-otp-btn"
                                          onclick="sendOTP()">Send OTP</button>
                                    </div>
                                    <div class="valid-feedback">Enter Valid Email</div>
                                 </div>



                                 <!-- OTP -->
                                 <div class="form-outline mb-4 col-12 col-md-8" id="otp-section" style="display: none;">
                                    <label for="otp" class="form-label"><b>Enter OTP</b></label>
                                    <div class="input-group">
                                       <input type="password" placeholder="Enter OTP" class="form-control" id="otp"
                                          name="otp" required>
                                       <button type="button" class="btn btn-outline-secondary" id="toggle-otp">
                                          <i class="bi bi-eye-slash" id="otp-icon"></i>
                                       </button>
                                    </div>
                                 </div>

                                 <!-- Submit -->
                                 <div class="d-grid mb-4 col-12 col-md-8">
                                    <button class="btn btn-primary" type="button"
                                       onclick="signupUser()">Signup</button><br><br>
                                 </div>

                                 Already have an account?<a class="Account" href="/" class="small text-muted"> sign in
                                 &nbsp;&nbsp;</a><br><br>
                                 <a href="/auth/google" class="google-btn">
                                    <img src="https://developers.google.com/identity/images/g-logo.png"
                                       alt="Google logo" class="google-icon">
                                    <span>Sign in with Google</span>
                                 </a>

                              </form>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </section>
   </div><br><br><br>
   <script>